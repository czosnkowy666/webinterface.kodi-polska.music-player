<?xml version="1.0" encoding="UTF-8"?>
<addon id="webinterface.kodi-polska.music-player"
       name="Kodi Polska Music Web Player"
       version="0.0.1"
       provider-name="garlic666">

  <requires>
    <import addon="xbmc.python" version="3.0.0" />
  </requires>

  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>en</language>
    <license>Apache2</license>
    <forum>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player/issues</forum>
		<source>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player</source>
    <website>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player/wiki</website>
    <summary lang="en_GB">Simple Kodi Music Web UI</summary>
    <description lang="en_GB">Browse and play Kodi's music library from a browser</description>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>    
  </extension>

  <extension point="xbmc.webinterface" library="resources/web/index.html">
    <provides>webinterface</provides>
  </extension>

</addon>
